@{
    ViewBag.Title = "Gider Çiçekçilik";
    Layout = "~/Views/_NewMaster.cshtml";
}
@model B2B.Dto.HomePageClasses

<div class="content-page">
    <div class="container">
        <!-- featured category fashion -->
        <div class="category-product">
            <div class="navbar nav-menu">
                <div class="navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <div class="new_title">
                                <h1 style="color:#f00;font-size:22px">Mersin Çiçek Siparişi</h1>
                            </div>
                        </li>
                        @*<li class="active"><a data-toggle="tab" href="/Products/ProductList_ByCategory/51">Tümünü göster</a> </li>*@
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <div class="product-bestseller">
                <div class="product-bestseller-content">
                    <div class="product-bestseller-list">
                        <div class="tab-container">
                            <!-- tab product -->
                            <div class="tab-panel active" id="tab-1">
                                <div class="category-products">
                                    <ul class="products-grid">
                                        <!-- indirim ürün tekrarla -->
                                        @foreach (var item in Model.Indirim)
                                        {
                                            <li class="item col-lg-3 col-md-3 col-sm-4 col-xs-6">
                                                <div class="item-inner">
                                                    <div class="item-img">
                                                        <div class="item-img-info">
                                                            <a class="product-image" href="/Products/ProductDetails/@item.urunId"> <img src="/Upload/imajlar/@item.urunFoto" alt="@item.urunAdi"> </a>
                                                            <div class="box-hover">
                                                                <ul class="add-to-links">
                                                                    <li><a class="link-quickview" href="#">Detay</a> </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="item-info">
                                                        <div class="info-inner">
                                                            <div class="item-title"> <a href="/Products/ProductDetails/@item.urunId">@item.urunAdi</a> </div>
                                                            <div class="item-content">
                                                                <div class="rating">
                                                                    <div class="ratings">
                                                                        <div class="rating-box">
                                                                            <div style="width:80%" class="rating"></div>
                                                                        </div>
                                                                        <p class="rating-links"> <a href="#">1 Review(s)</a> <span class="separator">|</span> <a href="#">Add Review</a> </p>
                                                                    </div>
                                                                </div>
                                                                <div class="item-price">
                                                                    <div class="price-box"> <span class="regular-price"> <span class="price">@string.Format("{0:C}", item.urunFiyat)</span> </span> </div>
                                                                </div>
                                                                <div class="action">
                                                                    <button onclick="SepeteAt(@item.urunId);" class="button btn-cart" type="button" title="" data-original-title="Sipariş Ver"><span>Sipariş Ver</span> </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                        <!-- indirim ürün tekrarla -->
                                    </ul>
                                </div>
                            </div>
                            <!-- tab product -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- our features -->
<!-- bestsell Slider -->
<section class="bestsell-pro">
    <div class="container">
        <div class="slider-items-products">
            <div class="bestsell-block">
                <div id="bestsell-slider" class="product-flexslider hidden-buttons">
                    <div class="home-block-inner">
                        <div class="block-title">
                            <h2>Yepyeni Koleksiyon </h2>
                        </div>
                        <div class="pretext">
                            <a href="#"> <img src="/assets/images/offer-banner.jpg" alt="mersin özel fiyatlarla çiçek"> </a>
                            <div class="offer-text">Yeni ürünlerde 25% İndirim!</div>
                        </div>
                        <a href="/Products/ProductList/" class="view_more_bnt">Tümünü Göster</a>
                    </div>
                    <div class="slider-items slider-width-col4 products-grid block-content">
                        @foreach (var item in Model.YeniUrunler)
                        {
                            <div class="item">
                                <div class="item-inner">
                                    <div class="item-img">
                                        <div class="item-img-info">
                                            <a class="product-image" href="/Products/ProductDetails/@item.urunId"> <img src="/Upload/imajlar/@item.urunFoto" alt="@item.urunAdi"> </a>
                                            <div class="sale-label new-top-left">Yeni</div>
                                            <div class="box-hover">
                                                <ul class="add-to-links">
                                                    <li><a class="link-quickview" href="#" onclick="SepeteAt(@item.urunId);">Hızlı Sipariş</a> </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="item-info">
                                        <div class="info-inner">
                                            <div class="item-title"> <a href="/Products/ProductDetails/@item.urunId">@item.urunAdi </a> </div>
                                            <div class="rating">
                                                <div class="ratings">
                                                    <div class="rating-box">
                                                        <div style="width:80%" class="rating"></div>
                                                    </div>
                                                    <p class="rating-links">   </p>
                                                </div>Öne Çıkanlar
                                            </div>
                                            <div class="item-content">
                                                <div class="item-price">
                                                    <div class="price-box"> <span class="regular-price"> <span class="price">@string.Format("{0:C}", item.urunFiyat)</span> </span> </div>
                                                </div>
                                                <div class="action">
                                                    <button onclick="SepeteAt(@item.urunId);" class="button btn-cart" type="button" title="" data-original-title="Sipariş Ver"><span>Sipariş Ver</span> </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Bestsell Slider -->
<div class="container">
    <div class="home-block-inner">
        <div class="block-title">
            <h2>Mersin Hızlı Çiçek Siparişi</h2>
