@model B2B.Dto.SiparisDuzenleDto
<br>
<link href="https://fonts.googleapis.com/css?family=Sofia" rel="stylesheet" />
<table width="90%" align="center" cellspacing="0" cellpadding="0">
    <style>
        <!--
        a:hover {
            color: #000000;
            text-decoration: none;
        }

        a.gold:link, a:visited {
            color: #000000;
            text-decoration: none;
        }

        a.gold:hover {
            color: #9b6902;
            text-decoration: none;
        }
        -->
    </style>
    <td>
        <p style="font-size:16px;color:#000000;font-family:'Raleway', Verdana, Arial, Helvetica, sans-serif; font-weight:800; letter-spacing: 1px;">

            Sipariş Detayları
            <br>@Model.Siparis.SiparisNo
            <br>
            <span style="font-size:13px;color:#000000;font-family:'Raleway', Verdana, Arial, Helvetica, sans-serif; font-weight:500; letter-spacing:0;">
                <!-- "Assitant Designer" replace to your title -->
                @foreach (var item in Model.Siparis.SiparisUrunleri)
                {
                <h2> @Html.Action("UrunAdiVer", "Products", new { UrunId = item.UrunId })</h2>
                }
            </span>
        </p>
        <p style="margin-bottom:20px;margin-top:20px;">
            @foreach (var item in Model.Siparis.SiparisUrunleri)
            {
                <img src="/Upload/imajlar/@Html.Action("UrunFotografiVer", "Products", new { id = item.UrunId })" id="row-@item.Id" data-fotoUrl="@item.UrunId" height="150" />
            }
        </p>
        <p style="font-size:13px;color:#000000;font-family:'Raleway', Verdana, Arial, Helvetica, sans-serif;margin-bottom:10px;margin-top:0px; line-height: 1.5; font-weight:500;">
            @Html.Raw(Model.Siparis.SiparisNotlari)
            <br />Teslim Adresi: @Html.Raw(Model.Siparis.SiparisAdresi)
        </p>

      
        <p style="font-size:11px; font-family:Arial, Helvetica, sans-serif; color:#000000; margin-top:10px;">
            Siparişinizi teslim ettikten sonra bu kağıdı lütfen işyerine götürünüz.
        </p>

    </td>
</table>
<script>
       window.print();
    
</script>