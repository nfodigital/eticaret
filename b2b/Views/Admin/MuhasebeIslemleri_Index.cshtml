<script src="/assets/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script>

    @{
        string v;
        if( Model.VadeTarihi.SingleOrDefault() == null)
        {
            v = "0";
        }
        else
        {
            v = Model.VadeTarihi.FirstOrDefault().VadeTarihi.ToShortDateString();
        }
    }
    $('#saveChanges_VadeGunu').on('click', function() {
        if(@Model.VadeTarihi.Count()>0) {
            swal({
                title: "Dikkat?",
                text: "Bu firmaya ait bir vade tarihi var '', bunu değiştirmek istediğinize emin misiniz?" ,
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Evet, düzeltmeyi onaylıyorum",
                closeOnConfirm: false
            }, function(){
                $.get('@Url.Content("~/")Admin/VadeGunuBelirle', {
                    'FirmaId': @Model.Id, 'vadeTarihi' : $('#vadeTarihi').val(), 'Update' : true, 'OngorulenMiktar': $('#ongorulenMiktar').val()
                }, function (d) {
                    swal("Uyarı", d.ReturnMsg, d.Error);
                    $('#vadeGunuUyarisiModal').modal('toggle');
                });
            });
        }
    });

    /**
    saveChanges Buttonu
    **/
    $('#saveChanges').on('click', function () {
        if(controlRows()) {
            if(@Model.FirmaUyarilari.Count(q=>q.UyariTipi== "odemeUyarisi") > 0) {
                //Warning Message
                swal({
                    title: "Dikkat?",
                    text: "Bu kullanıcıya yapılmış bir ödeme uyarısı zaten mevcut\nSon şekliyle düzenlediğiniz mesaj ve geçerlilik tarihi olarak güncelleme yapmak istiyor musunuz?",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Evet, uyarıyı uzatmayı onaylıyorum",
                    closeOnConfirm: false
                }, function(){
                    $.get('@Url.Content("~/")Admin/UyariEkle', {
                        'musteriId': @Model.Id, 'Mesaj' : $('#uyariMesaji').val(), 'validDate' : $('#gecerlilikTarihi').val(), 'Update' : "true"
                    }, function (d) {
                        swal("Uyarı", d.ReturnMsg, d.Error);
                        $('#odemeUyarisiModal').modal('toggle');
                    });
                });
            }
            else {
                $.get('@Url.Content("~/")Admin/UyariEkle', {
                    'musteriId': @Model.Id, 'Mesaj' : $('#uyariMesaji').val(), 'validDate' : $('#gecerlilikTarihi').val(), 'Update' : "false"
                }, function (d) {
                    swal("Uyarı", d.ReturnMsg, d.Error);
                    $('#BildirimSayisi').html("Gösteriliyor");
                    $('#odemeUyarisiModal').modal('toggle');
                });
            }
        }
    });

    function deleteWarning(id) {
        $.get('@Url.Content("~/")Admin/UyariEkle', {
            'musteriId': @Model.Id, 'Mesaj' : $('#uyariMesaji').val(), 'validDate' : $('#gecerlilikTarihi').val(), 'Update' : "Delete"
        }, function (d) {
            swal("Uyarı", d.ReturnMsg, d.Error);
            $('#BildirimSayisi').html("Gösterilmiyor");
        });
    }
    function controlRows() {
        if($('#gecerlilikTarihi').val() == "")
        {
            swal("Hata", "Lütfen tarih giriniz.","error");
            return false;
        }
        else return true;
    } // Tarih kontrol

    // General Document Handlings
    jQuery('.datepicker').datepicker({
        toggleActive: true,
        format: 'dd.mm.yyyy',
    });


    //self functions
    function breeze(firmaid, action) {
        if(action == "dondur") {
            swal({
                title: "Dikkat?",
                text: "Firmanın tüm hesaplarını dondurmak, sipariş vermeyi, firma kullanıcılarının sisteme giriş yapmalarını engelleyecektir.\nBu işlemi yapmak istediğinize emin misiniz?",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Evet, onaylıyorum",
                closeOnConfirm: false
            }, function(){
                $.get('@Url.Content("~/")Admin/TumHesaplariDondur', {
                    'Id' : firmaid,
                    'aksiyon' : "dondur"
                }, function (d) {
                    if(d.ReturnValue==firmaid) {
                        window.location.reload();
                    }
                    else {
                        swal("Bilgi", d.ReturnMsg, d.Error);
                    }
                });
            });
        }
        else {
            $.get('@Url.Content("~/")Admin/TumHesaplariDondur', {
                'Id' : firmaid,
                'aksiyon' : "ac"
            }, function (d) {
                if(d.ReturnValue==firmaid) {
                    swal("Bilgi", d.ReturnMsg, d.Error);
                    window.location.reload();
                }
                else {
                    swal("Bilgi", d.ReturnMsg, d.Error);
                }
            });
        }
    }
    function CariDurumDegis(id) {
        $.get('@Url.Content("~/")Admin/CariDurumDegis', {
            'Id' : id
        }, function (d) {
            if(d.ReturnValue==1) {
                //swal("Bilgi", "Cari Hesaba izin verildi", d.Error);
                window.location.reload();
            }
            else {
                //swal("Bilgi", "Cari Hesap izni kaldırıldı", d.Error);
                window.location.reload();
            }

        });
    }

</script>

