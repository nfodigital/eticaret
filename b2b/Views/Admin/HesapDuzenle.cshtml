    var cari = @Model.CariHesapIzni;
    var sehir = $("#Sehir-Duzenle").find("option:contains('@Model.Sehir')").val();
  
    $('#Sehir-Duzenle').val(sehir);
    $('.selectpicker').selectpicker();
    if(cari==1) {
        $('#CariHesapIzni-Duzenle').prop('checked', true);
    }
    $("#FirmaIskonto-Duzenle").TouchSpin({
        min: 0, max: 100
    });
    $('[data-toggle="tooltip"]').tooltip();
</script>
